<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout123"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#37c3c3c3">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="end"
        android:background="@android:color/transparent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/white">

            <ImageView
                android:id="@+id/action_home"
                android:layout_width="@dimen/main_input_box_height"
                android:layout_height="@dimen/main_input_box_height"
                android:padding="@dimen/input_box_image_padding"
                android:background="@drawable/item_background"
                app:srcCompat="@drawable/ic_home_black_24dp"
                android:contentDescription="@null" />

            <ImageView
                android:id="@+id/action_settings"
                android:layout_width="@dimen/main_input_box_height"
                android:layout_height="@dimen/main_input_box_height"
                android:padding="@dimen/input_box_image_padding"
                android:background="@drawable/item_background"
                app:srcCompat="@drawable/ic_settings_black_24dp"
                android:contentDescription="@null" />

            <ImageView
                android:id="@+id/action_history"
                android:layout_width="@dimen/main_input_box_height"
                android:layout_height="@dimen/main_input_box_height"
                android:padding="@dimen/input_box_image_padding"
                android:background="@drawable/item_background"
                app:srcCompat="@drawable/ic_history_black_24dp"
                android:contentDescription="@null"/>

            <ImageView
                android:id="@+id/action_refresh"
                android:layout_width="@dimen/main_input_box_height"
                android:layout_height="@dimen/main_input_box_height"
                android:padding="@dimen/input_box_image_padding"
                android:background="@drawable/item_background"
                app:srcCompat="@drawable/ic_refresh_black_24dp"
                android:contentDescription="@null" />

            <ImageView
                android:id="@+id/action_cancel"
                android:contentDescription="@null"
                android:layout_width="@dimen/input_box_image_height"
                android:layout_height="@dimen/input_box_image_height"
                android:padding="@dimen/input_box_image_padding"
                app:srcCompat="@drawable/ic_cancel_white"
                android:background="@drawable/item_background"
                android:visibility="gone">

            </ImageView>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#e3929292"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none"
            android:background="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/action_forward"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/item_background"
                    android:text="Page Forward"
                    android:textSize="@dimen/main_input_box_text_size"
                    android:textColor="#323436"
                    android:padding="@dimen/menu_item_padding"
                    android:drawablePadding="@dimen/input_box_image_padding"
                    android:gravity="center|start"
                    android:drawableLeft="@drawable/ic_down_white"
                    android:drawableStart="@drawable/ic_down_white" />

                <TextView
                    android:id="@+id/action_add_to_home"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/item_background"
                    android:text="Add to Home"
                    android:textSize="@dimen/main_input_box_text_size"
                    android:textColor="#323436"
                    android:padding="@dimen/menu_item_padding"
                    android:drawablePadding="@dimen/input_box_image_padding"
                    android:gravity="center|start"
                    android:drawableLeft="@drawable/ic_add_black_24dp"
                    android:drawableStart="@drawable/ic_add_black_24dp" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/item_background"
                    android:text="Downloads"
                    android:textSize="@dimen/main_input_box_text_size"
                    android:textColor="#323436"
                    android:padding="@dimen/menu_item_padding"
                    android:visibility="gone"
                    android:drawablePadding="@dimen/input_box_image_padding"
                    android:gravity="center|start"
                    android:drawableLeft="@drawable/ic_add_black_24dp"
                    android:drawableStart="@drawable/ic_add_black_24dp" />

                <LinearLayout
                    android:id="@+id/action_move_page"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/main_input_box_height"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/action_up"
                        android:layout_width="45dp"
                        android:layout_height="@dimen/main_input_box_height"
                        android:background="@drawable/item_background"
                        app:srcCompat="@drawable/ic_expand_less_black_24dp"
                        android:focusable="true"
                        android:clickable="true"
                        android:padding="@dimen/menu_item_padding" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/main_input_box_height"
                        android:gravity="center|start"
                        android:text="Move Page"
                        android:lines="1"
                        android:textSize="@dimen/main_input_box_text_size"
                        android:textColor="#323436"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"/>

                    <ImageView
                        android:id="@+id/action_down"
                        android:layout_width="45dp"
                        android:layout_height="@dimen/main_input_box_height"
                        android:background="@drawable/item_background"
                        app:srcCompat="@drawable/ic_expand_more_black_24dp"
                        android:padding="@dimen/menu_item_padding"
                        android:focusable="true"
                        android:clickable="true"
                        android:contentDescription="@null" />

                </LinearLayout>

                <TextView
                    android:id="@+id/action_find"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/item_background"
                    android:text="Find in Page"
                    android:textSize="@dimen/main_input_box_text_size"
                    android:textColor="#323436"
                    android:padding="@dimen/menu_item_padding"
                    android:drawablePadding="@dimen/input_box_image_padding"
                    android:gravity="center|start"
                    android:drawableLeft="@drawable/ic_search_white"
                    android:drawableStart="@drawable/ic_search_white" />


                <TextView
                    android:id="@+id/action_view_source"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/item_background"
                    android:text="View Source"
                    android:textSize="@dimen/main_input_box_text_size"
                    android:textColor="#323436"
                    android:padding="@dimen/menu_item_padding"
                    android:drawablePadding="@dimen/input_box_image_padding"
                    android:gravity="center|start"
                    android:drawableLeft="@drawable/ic_baseline_code_24"
                    android:drawableStart="@drawable/ic_baseline_code_24" />

                <TextView
                    android:id="@+id/action_desktop"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/item_background"
                    android:text="Desktop Mode"
                    android:textSize="@dimen/main_input_box_text_size"
                    android:textColor="#323436"
                    android:padding="@dimen/menu_item_padding"
                    android:drawablePadding="@dimen/input_box_image_padding"
                    android:gravity="center|start"/>

                <TextView
                    android:id="@+id/action_private"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/item_background"
                    android:text="Private Mode"
                    android:textSize="@dimen/main_input_box_text_size"
                    android:textColor="#323436"
                    android:padding="@dimen/menu_item_padding"
                    android:drawablePadding="@dimen/input_box_image_padding"
                    android:gravity="center|start"/>

                <TextView
                    android:id="@+id/action_share_url"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/item_background"
                    android:textSize="@dimen/main_input_box_text_size"
                    android:textColor="#323436"
                    android:gravity="center|start"
                    android:padding="@dimen/menu_item_padding"
                    android:drawablePadding="@dimen/input_box_image_padding"
                    android:drawableLeft="@drawable/ic_share_black_24dp"
                    android:drawableStart="@drawable/ic_share_black_24dp" />

                <TextView
                    android:id="@+id/action_exit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/item_background"
                    android:text="Exit"
                    android:textSize="@dimen/main_input_box_text_size"
                    android:textColor="#323436"
                    android:padding="@dimen/menu_item_padding"
                    android:drawablePadding="@dimen/input_box_image_padding"
                    android:gravity="center|start"
                    android:drawableLeft="@drawable/ic_power_settings_new_black_24dp"
                    android:drawableStart="@drawable/ic_power_settings_new_black_24dp" />

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

</LinearLayout>