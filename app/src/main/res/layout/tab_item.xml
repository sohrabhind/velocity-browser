<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/tab_frame_padding">

    <LinearLayout
        android:id="@+id/tab_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="start|center"
        android:background="#BDBDBD">

        <TextView
            android:id="@+id/tab_title"
            android:layout_width="match_parent"
            android:layout_height="@dimen/tab_title_hight"
            android:layout_marginLeft="@dimen/tab_title_start_padding"
            android:layout_marginStart="@dimen/tab_title_start_padding"
            android:paddingTop="@dimen/tab_title_top_padding"
            android:textColor="@color/white"
            android:textSize="@dimen/tab_title_text_size"
            android:textStyle="bold"
            android:singleLine="true"
            android:ellipsize="none">
        </TextView>

        <TextView
            android:id="@+id/tab_url"
            android:layout_width="match_parent"
            android:layout_height="@dimen/tab_url_height"
            android:gravity="center|start"
            android:layout_marginLeft="@dimen/tab_url_start_padding"
            android:layout_marginStart="@dimen/tab_url_start_padding"
            android:paddingBottom="@dimen/tab_url_bottom_padding"
            android:textColor="#616161"
            android:textSize="@dimen/tab_url_text_size"
            android:singleLine="true"
            android:ellipsize="none">
        </TextView>

    </LinearLayout>

    <ImageView
        android:id="@+id/close_tab"
        android:layout_width="@dimen/tab_close_image_size"
        android:layout_height="@dimen/tab_close_image_size"
        android:padding="@dimen/tab_close_image_padding"
        android:layout_gravity="end|center"
        app:srcCompat="@drawable/ic_cancel_white"
        android:background="#BDBDBD"
        android:foreground="@drawable/item_background"
        android:contentDescription="@null" />

</FrameLayout>