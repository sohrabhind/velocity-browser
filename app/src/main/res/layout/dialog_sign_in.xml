<LinearLayout
xmlns:android="http://schemas.android.com/apk/res/android"
android:orientation="vertical"
android:layout_width="match_parent"
android:layout_height="match_parent">

<EditText
    android:id="@+id/dialog_sign_in_username"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/popup_btw_padding"
    android:layout_margin="@dimen/popup_btw_padding"
    android:hint="@string/username"
    android:textColor="@color/textColor"
    android:textSize="@dimen/main_input_box_text_size"
    android:textCursorDrawable="@null"
    android:singleLine="true"
    android:background="@color/color_background"
    android:inputType="text"
    android:importantForAutofill="no">
</EditText>

<EditText
    android:id="@+id/dialog_sign_in_password"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/popup_btw_padding"
    android:layout_margin="@dimen/popup_btw_padding"
    android:hint="@string/password"
    android:textColor="@color/textColor"
    android:textSize="@dimen/main_input_box_text_size"
    android:textCursorDrawable="@null"
    android:singleLine="true"
    android:ellipsize="none"
    android:background="@color/color_background"
    android:inputType="textPassword"
    android:importantForAutofill="no">
</EditText>

</LinearLayout>
